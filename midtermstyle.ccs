body {
    font-family: "Helvetica Neue", Arial, sans-serif;
    line-height: 1.6;
    margin: 0;
    padding: 0;
    background-color: #fdfdfd;
    color: #333;
}

/* Skip link for accessibility */
.skip-link {
    position: absolute;
    top: -40px;
    left: 0;
    background-color: #215a14;
    color: white;
    padding: 8px 12px;
    text-decoration: none;
    z-index: 100;
}
.skip-link:focus {
    top: 0;
}

/* Header */
header {
    background-color: #215a14;
    color: white;
    text-align: center;
    padding: 20px 0;
}

#site-title {
    font-size: 48px;
    margin: 0;
}

nav ul {
    list-style: none;
    padding: 0;
    margin: 10px 0 0 0;
    display: flex;
    justify-content: center;
    gap: 30px;
}

nav a {
    color: white;
    text-decoration: none;
    font-weight: bold;
}

nav a:hover {
    text-decoration: underline;
}

/* Main content */
main {
    max-width: 900px;
    margin: 0 auto;
    padding: 20px;
}

h2, h3 {
    color: #215a14;
}

section {
    margin-bottom: 30px;
}

/* Figures and images */
figure {
    text-align: center;
    margin: 30px auto;
    border: 1px solid #ccc;
    background-color: #f7f7f7;
    padding: 10px;
}

figure img {
    width: 80%;
    max-width: 600px;
    height: auto;
    border-radius: 6px;
}

figcaption {
    font-size: 14px;
    color: #555;
    margin-top: 6px;
}

/* Footer */
#footer-info {
    background-color: #215a14;
    color: white;
    text-align: center;
    padding: 10px 0;
    font-size: 14px;
}
